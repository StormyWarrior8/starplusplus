div.container
    div.row
        div.col-lg-8.col-lg-offset-2
            h2.center-text Create Account
            hr
            form(novalidate,name="createForm").form-horizontal
                //- Get username
                //- Validate:
                //-     Required: true
                //-     Minimum Length: 6
                //-     Maximum Length: 32
                div.form-group
                    label.col-lg-4.control-label Username
                    div.col-lg-8
                        //- Username input
                        input(type="text", ng-model="user.username", name="username", 
                            placeholder="Username", autofocus, 
                            required, ng-minlength=6, ng-maxlength=32).form-control
                        //- Validation warnings
                        div(ng-show="createForm.username.$dirty && createForm.username.$invalid").alert.alert-danger
                            | Invalid: 
                            span(ng-show="createForm.username.$error.required")
                                | Username Required. 
                            span(ng-show="createForm.username.$error.minlength")
                                | Username must be 6 or more characters long. 
                            span(ng-show="createForm.username.$error.maxlength")
                                | Username must be 32 or less characters long. 
                //- Get email
                //- Validate:
                //-     Required: true
                //-     Valid Email: true
                div.form-group
                    label.col-lg-4.control-label Email
                    //- Email input
                    div.col-lg-8
                        input(type="email", name="email", ng-model="user.email", 
                            placeholder="Email", required).form-control
                        //- Validation warnings
                        div(ng-show="createForm.email.$dirty && createForm.email.$invalid").alert.alert-danger
                            | Invalid: 
                            span(ng-show="createForm.email.$error.required")
                                | Email Required. 
                            span(ng-show="createForm.email.$error.email")
                                | Email must be valid. 
                //- Get password
                //- Validate:
                //-     Required: true
                //-     Minimum Length: 6
                //-     Maximum Length: 128
                div.form-group
                    label.col-lg-4.control-label Password
                    div.col-lg-8
                        //- Password input
                        input(type="password", name="password", ng-model="user.password", 
                            placeholder="Password",
                            required, ng-minlength=6, ng-maxlength=128).form-control
                        //- Validation warnings
                        div(ng-show="createForm.password.$dirty && createForm.password.$invalid").alert.alert-danger
                            | Invalid: 
                            span(ng-show="createForm.password.$error.required")
                                | Password Required. 
                            span(ng-show="createForm.password.$error.minlength")
                                | Password must be 6 or more characters long. 
                            span(ng-show="createForm.password.$error.maxlength")
                                | Password must be 128 or less characters long. 
                //- Get password conformation
                //- Validate:
                //-     Required: true
                //-     Minimum Length: 6
                //-     Maximum Length: 128
                div.form-group
                    label.col-lg-4.control-label Confirm Password
                    div.col-lg-8
                        //- Password confirmation input
                        input(type="password", name="confirmPassword", ng-model="user.confirmPassword", 
                            placeholder="Confirm Password",
                            required, ng-minlength=6, ng-maxlength=128).form-control
                        //- Validation warnings
                        div(ng-show="createForm.confirmPassword.$dirty && createForm.confirmPassword.$invalid").alert.alert-danger
                            | Invalid: 
                            span(ng-show="createForm.confirmPassword.$error.required")
                                | Password Required. 
                            span(ng-show="createForm.confirmPassword.$error.minlength")
                                | Password must be 6 or more characters long. 
                            span(ng-show="createForm.confirmPassword.$error.maxlength")
                                | Password must be 128 or less characters long. 
                div.form-group
                    div.col-lg-8.col-lg-offset-4
                        button(type="button", ng-click="create()",
                            ng-disabled="createForm.$invalid").btn.btn-success Create Account
            hr
